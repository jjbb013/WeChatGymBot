/* pages/profile/profile.wxss */
.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  padding: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden; /* 保证图片在圆角内 */
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.form-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #555;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 30rpx;
  color: #555;
  padding-top: 10rpx;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  margin-top: 60rpx;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
}
