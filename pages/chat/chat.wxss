/* pages/chat/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100%; /* 从 100vh 改为 100%，继承 page 的高度 */
}

.coach-mode-header {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #e6f7ff; /* 淡蓝色背景 */
  border-bottom: 1rpx solid #bae7ff;
}

.create-student-btn, .view-students-btn {
  flex: 1;
  margin: 0 10rpx;
  background-color: #1890ff; /* 蓝色按钮 */
  color: white;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
}

.create-student-btn::after, .view-students-btn::after {
  border: none; /* 移除默认边框 */
}

.message-list {
  flex-grow: 1;
  padding: 20rpx;
  background-color: #f7f7f7;
  overflow-y: auto; /* 允许内容区域独立滚动 */
  -webkit-overflow-scrolling: touch; /* 在 iOS 上启用平滑滚动 */
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start; /* 确保头像和内容垂直对齐 */
}

.message-item.ai {
  justify-content: flex-start;
}

.message-item.user {
  justify-content: flex-end;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.ai-content {
  background-color: #fff;
  margin-left: 20rpx;
}

.user-content {
  background-color: #95ec69;
  margin-right: 20rpx;
}

.content.thinking {
  color: #999;
  font-style: italic;
}

.input-area {
  display: flex;
  align-items: flex-end; /* 垂直底部对齐 */
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #ddd;
  background-color: #f7f7f7;
  width: 100%;
  box-sizing: border-box;
}

.icon-wrapper {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

