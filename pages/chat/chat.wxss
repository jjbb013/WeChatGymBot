/* pages/chat/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.message-list {
  flex-grow: 1;
  padding: 20rpx;
  background-color: #f7f7f7;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
}

.message-item.ai {
  justify-content: flex-start;
}

.message-item.user {
  justify-content: flex-end;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.avatar.ai {
  background-color: #11cd6e;
}

.avatar.user {
  background-color: #007aff;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 20rpx;
  word-wrap: break-word;
}

.message-item.ai .content {
  background-color: #fff;
}

.message-item.user .content {
  background-color: #95ec69;
}

.content.thinking {
  color: #999;
  font-style: italic;
}

.input-area {
  display: flex;
  align-items: flex-end; /* 垂直底部对齐 */
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #ddd;
  background-color: #f7f7f7;
  width: 100%;
  box-sizing: border-box;
}

.icon-wrapper {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

