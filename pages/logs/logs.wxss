/* pages/logs/logs.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.loading-tip, .empty-tip {
  text-align: center;
  color: #999;
  padding-top: 200rpx;
}

.log-list {
  width: 100%;
}

.log-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.log-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.action-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.log-date {
  font-size: 24rpx;
  color: #999;
}

.log-card-body {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}
