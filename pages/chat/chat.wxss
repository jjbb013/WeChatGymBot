.input-wrapper {
  flex-grow: 1;
  margin: 0 10rpx;
}

.input-field {
  width: 100%;
  min-height: 72rpx; /* 最小高度 */
  max-height: 240rpx; /* 最大高度，防止无限增高 */
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  font-size: 32rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.voice-record-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 12rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  font-size: 32rpx;
  color: #333;
}

.voice-record-btn-hover {
  background-color: #e0e0e0;
  color: #000;
}

.voice-record-btn.recording {
  background-color: #e0e0e0;
  color: #000;
}

.send-btn {
  flex-shrink: 0;
  width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0;
  margin-left: 10rpx;
  border-radius: 12rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}

.send-btn[disabled] {
  background-color: #a0e8c2;
  color: #fff;
}
